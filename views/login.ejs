<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
            <%- include('./partials/messages.ejs') %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter Password"
                    />
                </div>
                <p class="mt-4">
                    Forgot Password? <a href="/users/register">Forgot</a>
                </p>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <span>
                <span class="lead mt-4 pr-6">
                    Log in With Google <a href="/users/google"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                </span>
                <span class="p-4 m-4"></span>
                <span class="p-4 m-4"></span>
                <span class="lead mt-4 pl-6">
                    No Account? <a href="/users/register">Register</a>
                </span>
            </span>
        </div>
    </div>
</div>
