<script>
    <% if( locals.errors ){ %> 
        <% errors.forEach(function(err) { %>
            new Noty({
                    theme: 'relax',
                    text: "<%= err.msg %>",
                    type: 'warning',
                    layout: 'topRight',
                    timeout: 4000
                }).show();
        <% }); %>
    <% } %>
        
    <% if(success_msg != ''){ %>
            
            new Noty({
                    theme: 'sunset',
                    text: "<%= success_msg %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 2000
                }).show();    
        <% } %> 
        <% if(error_msg != ''){ %>
            new Noty({
                    theme: 'sunset',
                    text: "<%= error_msg %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 4000
                }).show();
            
        <% } %> 
        <% if(error != ''){ %>
            new Noty({
                    theme: 'sunset',
                    text: "<%= error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 4000
                }).show();
            
        <% } %>
</script>